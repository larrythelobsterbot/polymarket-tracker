# Polymarket Tracker Configuration
# Copy this file to .env and fill in your values

# Database configuration
DATABASE_PATH=polymarket_data.db

# API Configuration (for authenticated endpoints - optional for public data)
# Get these from Polymarket if you need to access authenticated endpoints
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=

# Data collection settings
FETCH_INTERVAL_MINUTES=5
MAX_RETRIES=3
REQUEST_TIMEOUT_SECONDS=30

# Rate limiting (requests per 10 seconds)
# Polymarket limits: trades=200, positions=150, markets=300
RATE_LIMIT_TRADES=180
RATE_LIMIT_POSITIONS=130
RATE_LIMIT_MARKETS=280

# Logging
LOG_LEVEL=INFO
